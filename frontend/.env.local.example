# Frontend Environment Variables for Local Development
# Copy this file to .env.local and adjust values as needed

# Backend API URL - use http://localhost:8000 for local development
# Leave empty or set to "" for production with nginx reverse proxy
NEXT_PUBLIC_API_URL=http://localhost:8000

# WebSocket URL for real-time features (optional, defaults to API_URL with ws:// protocol)
# NEXT_PUBLIC_WS_URL=ws://localhost:8000
