# Elitelupus Staff Toolbox - Environment Variables
# Copy this file to .env and fill in your values

# ===========================================
# PostgreSQL Database
# ===========================================
POSTGRES_USER=elitelupus
POSTGRES_PASSWORD=your-secure-password-here

# ===========================================
# Django Backend
# ===========================================
DEBUG=False
SECRET_KEY=your-super-secret-key-generate-with-django-secret-key
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com

# ===========================================
# Steam API
# Get your key at: https://steamcommunity.com/dev/apikey
# ===========================================
STEAM_API_KEY=your-steam-api-key

# ===========================================
# Discord OAuth2
# Create an application at: https://discord.com/developers/applications
# ===========================================
DISCORD_CLIENT_ID=your-discord-client-id
DISCORD_CLIENT_SECRET=your-discord-client-secret

# ===========================================
# Google Sheets API (for Staff Roster)
# Create credentials at: https://console.cloud.google.com/apis/credentials
# ===========================================
GOOGLE_SHEETS_CREDENTIALS=/path/to/credentials.json
STAFF_ROSTER_SHEET_ID=1SSn3GXggr84dOYfQZzeHiRI0B1vaDkGynUyYHWfXIBo

# ===========================================
# URLs
# ===========================================
FRONTEND_URL=http://localhost:3000
CORS_ALLOWED_ORIGINS=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000
